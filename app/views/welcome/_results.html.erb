
                
                    <% res.each do |item| %>
                        <tr class="table-item">
                            <td class="text-left fornitore">
                                <% if item.nome_fornitore == "PneuShopping" %>
                                    <%= link_to (image_tag "#{item.nome_fornitore}.png"  , :class => 'logo') + item.nome_fornitore, "http://www.pneushopping.it/catalogo", :target => 'blank' %>
                                <% else %>
                                    <%= link_to (image_tag "#{item.nome_fornitore}.png"  , :class => 'logo') + item.nome_fornitore, item.fornitore, :target => 'blank' %>
                                <% end %>
                            </td>
                            <td class="text-left marca" ><%= item.marca %></td>
                            <td class="text-left descrizione"><%= item.modello.to_s.force_encoding("UTF-8")[0..40] %>
                                <% if item.modello.to_s.length > 39 %>
                                    ..
                                <% end %>
                                <div class="pull-right" style="padding-right: 1em;">
                                    <% if item.stagione == "4 Stagioni" %>
                                        <%= image_tag "4S.png", :class => 'logo-stagione' %>
                                    <% elsif item.stagione == "" %>
                
                                    <% else %>
                                        <%= image_tag item.stagione+".png", :class => 'logo-stagione' %>
                                    <% end %>
                                </div>
                                
                            </td>
                            <!--td class="text-left">
                                % if item.prezzo_listino.to_i == 0 %>
                                    -
                                % else %>
                                    %= item.prezzo_listino %>
                                % end %>
                            </td-->
                            <td class="text-center p_netto" ><%= number_with_precision(item.prezzo_netto, precision: 2) %>€</td>
                            
                            <td class="text-center giacenza" >
                                <% if item.nome_fornitore == "MaxiTyre" %>
                                    <%= "?" %>
                                <% else %>
                                    <%= item.giacenza %>
                                <% end %>
                            </td>
                            
                            <% if item.pfu == "C2" %>
                                <% pfu = 17.60 %>
                            <% elsif item.pfu == "C1" %>
                                <% pfu = 8.10 %>
                            <% else %>
                                <% pfu = 2.30 %>
                            <% end %>
                            
                            
                            <td class="text-center p_finale"><%= number_with_precision(item.prezzo_finale, precision: 2) %>€</td>
                                
                          
                        </tr>
                    <% end %>
                    
                    
                </tbody>
           
